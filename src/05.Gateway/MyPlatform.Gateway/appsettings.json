{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information",
      "MyPlatform.Gateway": "Debug"
    }
  },
  "AllowedHosts": "*",

  // JWT Authentication Configuration
  // NOTE: In production, use environment variables or a secure vault for the secret key
  "Jwt": {
    "SecretKey": "YourSuperSecretKeyThatShouldBeAtLeast32BytesLong!",
    "Issuer": "MyPlatform",
    "Audience": "MyPlatform.Api",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },

  // CORS Configuration
  "Cors": {
    "AllowedOrigins": [
      "https://localhost:3000",
      "https://app.myplatform.com",
      "https://admin.myplatform.com"
    ]
  },

  // Rate Limiting Configuration
  "RateLimiting": {
    "Global": {
      "PermitLimit": 100,
      "WindowSeconds": 60
    },
    "Api": {
      "PermitLimit": 50,
      "WindowSeconds": 60,
      "QueueLimit": 10
    },
    "Auth": {
      "PermitLimit": 10,
      "WindowSeconds": 60,
      "QueueLimit": 5
    },
    "Sliding": {
      "PermitLimit": 100,
      "WindowSeconds": 60,
      "SegmentsPerWindow": 6
    }
  },

  // YARP Reverse Proxy Configuration
  "ReverseProxy": {
    "Routes": {
      // Authentication routes - stricter rate limiting, no authorization required
      "auth-route": {
        "ClusterId": "identity-cluster",
        "RateLimiterPolicy": "auth",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/auth" },
          { "PathPrefix": "/api/auth" }
        ]
      },
      // Identity routes - requires authentication
      "identity-route": {
        "ClusterId": "identity-cluster",
        "AuthorizationPolicy": "authenticated",
        "RateLimiterPolicy": "api",
        "Match": {
          "Path": "/api/identity/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/identity" },
          { "PathPrefix": "/api" }
        ]
      },
      // Order routes - requires authentication
      "orders-route": {
        "ClusterId": "order-cluster",
        "AuthorizationPolicy": "authenticated",
        "RateLimiterPolicy": "api",
        "Match": {
          "Path": "/api/orders/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/orders" },
          { "PathPrefix": "/api" }
        ]
      },
      // Product routes - requires authentication
      "products-route": {
        "ClusterId": "product-cluster",
        "AuthorizationPolicy": "authenticated",
        "RateLimiterPolicy": "api",
        "Match": {
          "Path": "/api/products/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/products" },
          { "PathPrefix": "/api" }
        ]
      }
    },
    "Clusters": {
      // Identity/Authentication Service Cluster
      "identity-cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:10",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          },
          "Passive": {
            "Enabled": true,
            "Policy": "TransportFailureRate",
            "ReactivationPeriod": "00:01:00"
          }
        },
        "HttpClient": {
          "RequestTimeout": "00:00:30",
          "MaxConnectionsPerServer": 100
        },
        "Destinations": {
          "identity-1": {
            "Address": "http://localhost:5001"
          },
          "identity-2": {
            "Address": "http://localhost:5011"
          }
        }
      },
      // Order Service Cluster
      "order-cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:10",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          },
          "Passive": {
            "Enabled": true,
            "Policy": "TransportFailureRate",
            "ReactivationPeriod": "00:01:00"
          }
        },
        "HttpClient": {
          "RequestTimeout": "00:00:30",
          "MaxConnectionsPerServer": 100
        },
        "Destinations": {
          "order-1": {
            "Address": "http://localhost:5002"
          },
          "order-2": {
            "Address": "http://localhost:5012"
          }
        }
      },
      // Product Service Cluster
      "product-cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:10",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          },
          "Passive": {
            "Enabled": true,
            "Policy": "TransportFailureRate",
            "ReactivationPeriod": "00:01:00"
          }
        },
        "HttpClient": {
          "RequestTimeout": "00:00:30",
          "MaxConnectionsPerServer": 100
        },
        "Destinations": {
          "product-1": {
            "Address": "http://localhost:5003"
          },
          "product-2": {
            "Address": "http://localhost:5013"
          }
        }
      }
    }
  },

  // Observability Configuration
  "Observability": {
    "ServiceName": "MyPlatform.Gateway",
    "ServiceVersion": "1.0.0",
    "Logging": {
      "MinimumLevel": "Information",
      "WriteToConsole": true
    }
  }
}
