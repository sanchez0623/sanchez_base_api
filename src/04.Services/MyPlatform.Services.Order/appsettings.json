{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Platform": {
    "ApplicationName": "MyPlatform.Order",
    "Environment": "Development"
  },
  "Jwt": {
    "SecretKey": "YourSuperSecretKeyThatShouldBeAtLeast32BytesLong!",
    "Issuer": "MyPlatform",
    "Audience": "MyPlatform.Api",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "Redis": {
    "ConnectionString": "localhost:6379",
    "InstanceName": "MyPlatform:",
    "Database": 0
  },
  "RabbitMQ": {
    "HostName": "localhost",
    "Port": 5672,
    "UserName": "guest",
    "Password": "guest",
    "ExchangeName": "myplatform.events"
  },
  "Cache": {
    "LocalCacheExpirationSeconds": 60,
    "DistributedCacheExpirationSeconds": 300,
    "EnableLocalCache": true,
    "EnableDistributedCache": true
  },
  "Idempotency": {
    "HeaderName": "X-Idempotency-Key",
    "DefaultExpirationSeconds": 86400,
    "LockTimeoutSeconds": 30,
    "EnableResultCaching": true
  },
  "Saga": {
    "DefaultTimeoutSeconds": 300,
    "DefaultRetryCount": 3,
    "InitialRetryDelaySeconds": 5,
    "RetryDelayMultiplier": 2.0,
    "MaxRetryDelaySeconds": 300
  },
  "Observability": {
    "ServiceName": "MyPlatform.Order",
    "ServiceVersion": "1.0.0",
    "Logging": {
      "MinimumLevel": "Information",
      "WriteToConsole": true
    },
    "Tracing": {
      "Enabled": true,
      "TraceAspNetCore": true,
      "TraceHttpClient": true
    },
    "Metrics": {
      "Enabled": true,
      "ExposePrometheus": true
    }
  }
}
