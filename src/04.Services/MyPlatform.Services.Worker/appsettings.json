{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "Quartz": "Warning"
    }
  },
  "ConnectionStrings": {
    "QuartzConnection": "Server=localhost;Port=3306;Database=quartz;Uid=${MYSQL_USER};Pwd=${MYSQL_PASSWORD};",
    "WorkerConnection": "Server=localhost;Port=3306;Database=worker;Uid=${MYSQL_USER};Pwd=${MYSQL_PASSWORD};"
  },
  "Platform": {
    "ApplicationName": "MyPlatform.Worker",
    "Environment": "Production"
  },
  "Redis": {
    "ConnectionString": "localhost:6379",
    "InstanceName": "MyPlatform:",
    "Database": 0,
    "Password": "",
    "UseSsl": false,
    "ConnectTimeoutMs": 5000,
    "SyncTimeoutMs": 5000
  },
  "RabbitMQ": {
    "HostName": "localhost",
    "Port": 5672,
    "UserName": "guest",
    "Password": "guest",
    "ExchangeName": "myplatform.events",
    "VirtualHost": "/"
  },
  "Cache": {
    "LocalCacheExpirationSeconds": 60,
    "DistributedCacheExpirationSeconds": 300,
    "EnableLocalCache": true,
    "EnableDistributedCache": true
  },
  "Scheduler": {
    "InstanceName": "MyPlatformWorkerScheduler",
    "InstanceId": "AUTO",
    "ThreadCount": 10,
    "UsePersistentStore": false,
    "MisfireThresholdSeconds": 60
  },
  "Outbox": {
    "BatchSize": 100,
    "ProcessingIntervalSeconds": 5,
    "MaxRetryCount": 3,
    "RetentionDays": 7
  },
  "Observability": {
    "ServiceName": "MyPlatform.Worker",
    "ServiceVersion": "1.0.0",
    "EnableConsoleExporter": false,
    "Logging": {
      "MinimumLevel": "Information",
      "WriteToConsole": true,
      "WriteToFile": false
    },
    "Tracing": {
      "Enabled": true,
      "TraceAspNetCore": true,
      "TraceHttpClient": true
    },
    "Metrics": {
      "Enabled": true,
      "ExposePrometheus": false
    }
  },
  "JobSchedules": {
    "Jobs": {
      "SampleCleanupJob": {
        "Enabled": true,
        "CronExpression": "0 */5 * * * ?",
        "Description": "Sample cleanup job - runs every 5 minutes",
        "Group": "sample",
        "JobType": "MyPlatform.Services.Worker.Jobs.SampleCleanupJob, MyPlatform.Services.Worker"
      },
      "SampleTenantJob": {
        "Enabled": true,
        "CronExpression": "0 */10 * * * ?",
        "Description": "Sample tenant job - runs every 10 minutes",
        "Group": "sample",
        "JobType": "MyPlatform.Services.Worker.Jobs.SampleTenantJob, MyPlatform.Services.Worker"
      }
    }
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://*:5100"
      }
    }
  }
}
