{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "Quartz": "Warning"
    }
  },
  "Platform": {
    "ApplicationName": "MyPlatform.Worker",
    "Environment": "Production"
  },
  "Redis": {
    "ConnectionString": "localhost:6379",
    "InstanceName": "MyPlatform:",
    "Database": 0,
    "Password": "",
    "UseSsl": false,
    "ConnectTimeoutMs": 5000,
    "SyncTimeoutMs": 5000
  },
  "RabbitMQ": {
    "HostName": "localhost",
    "Port": 5672,
    "UserName": "guest",
    "Password": "guest",
    "ExchangeName": "myplatform.events",
    "VirtualHost": "/"
  },
  "Cache": {
    "LocalCacheExpirationSeconds": 60,
    "DistributedCacheExpirationSeconds": 300,
    "EnableLocalCache": true,
    "EnableDistributedCache": true
  },
  "Scheduler": {
    "InstanceName": "MyPlatformWorkerScheduler",
    "InstanceId": "AUTO",
    "ThreadCount": 10
  },
  "Outbox": {
    "BatchSize": 100,
    "ProcessingIntervalSeconds": 5,
    "MaxRetryCount": 3,
    "RetentionDays": 7
  },
  "Observability": {
    "ServiceName": "MyPlatform.Worker",
    "ServiceVersion": "1.0.0",
    "EnableConsoleExporter": false,
    "Logging": {
      "MinimumLevel": "Information",
      "WriteToConsole": true,
      "WriteToFile": false
    },
    "Tracing": {
      "Enabled": true,
      "TraceAspNetCore": false,
      "TraceHttpClient": true
    },
    "Metrics": {
      "Enabled": true,
      "ExposePrometheus": false
    }
  }
}
